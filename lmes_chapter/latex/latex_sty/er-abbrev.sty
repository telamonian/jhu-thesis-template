\newcommand\listofabbreviations{%
{\noindent}{~\\~\\~\\~\\\Large \bf List of Abbreviations~\\~\\~\\}\\%
\@for\TempVar:=\abrList\do{%
    \ifnum\the\value{abrvused\TempVar}=0%
       {}%
     \else%
       {\indent{\csname abrvs\TempVar\endcsname} -- {\csname abrvl\TempVar\endcsname}\\}%
     \fi%
}
}
