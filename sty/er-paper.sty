% beginsupplemental command. Place at start of supplement section to  start labeling all sections, figures, etc as S1, S2, etc
\newcommand{\beginsupplemental}{%
    \setcounter{figure}{0}%
    %\setcounter{page}{0}%
%    \setcounter{section}{0}%
    \setcounter{table}{0}%
    \continuesupplemental%
}
     
% continuesupplemental command. If you have multiple separate .tex files in your supplement, the first .tex file should have the \beginsupplement command in its header, and the remainder should have this \continuesupplement command in their headers
\newcommand{\continuesupplemental}{%
    \renewcommand{\thefigure}{S\arabic{figure}}%
    %\renewcommand{\thepage}{S\arabic{section}}%
%    \renewcommand{\thesection}{S\arabic{section}}%
    \renewcommand{\thetable}{S\arabic{table}}%
}
     
% jumpul command. Underlines that jump over descenders (like the bottom parts of lowercase p's)
\usepackage{soul}

\makeatletter
\newcommand*{\whiten}[1]{\llap{\textcolor{white}{{\the\SOUL@token}}\hspace{#1pt}}}
\DeclareRobustCommand*\jumpul{%
    \def\SOUL@everyspace{\underline{\space}\kern\z@}%
    \def\SOUL@everytoken{%
        \setbox0=\hbox{\the\SOUL@token}%
        \ifdim\dp0>\z@
            \raisebox{\dp0}{\underline{\phantom{\the\SOUL@token}}}%
            \whiten{1}\whiten{0}%
            \whiten{-1}\whiten{-2}%
            \llap{\the\SOUL@token}%
        \else
            \underline{\the\SOUL@token}%
        \fi
    }%
\SOUL@}
\makeatother

