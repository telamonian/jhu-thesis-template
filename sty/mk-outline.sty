% odone and odraft are separately hideable outline environments.
% ohlines is an outline environment that inserts a horizontal rule at the start and end

% define new variables for hiding the outline environments
\newif\ifshowodone
\newif\ifshowodraft
\newif\ifshowohline

% set some default values for hiding
\showodonefalse
\showodrafttrue
\showohlinetrue

% define (or not) the odone environment
\ifshowodone
    \NewEnviron{odone}{%
    \begin{outline}[outlinelist]%  
        \BODY% 
    \end{outline}}
\else
    \NewEnviron{odone}{}
\fi

% define (or not) the odraft environment
\ifshowodraft
    \NewEnviron{odraft}{%
    \begin{outline}[outlinelist]%  
        \BODY% 
    \end{outline}}
\else
    \NewEnviron{odraft}{}
\fi

% define (or not) the ohline environment
\ifshowohline
    \NewEnviron{ohline}{%
    \rule{\textwidth}{1pt} \\%
    \begin{outline}[outlinelist]%
        \BODY%
    \end{outline}%
    \rule{\textwidth}{1pt} \\}
\else
    \NewEnviron{ohline}{}
\fi




